<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tajwidify" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Tajwidify" parent="Base.Theme.Tajwidify" />
    
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparant</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <!--  Non selected color -->
        <item name="colorControlNormal">@color/shimmer</item>

        <!--   Selected color -->
        <item name="colorControlActivated">@color/green_light</item>
    </style>
</resources>